<%= form_with model: [@event, subscription], data: { turbo: false } do |f| %>
  <%= render partial: 'partials/errors', locals: { model: subscription } %>

  <% unless user_signed_in? %>
    <div class="mb-2">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="mb-2">
      <%= f.label :user_email %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('views.buttons.follow'), class: 'btn btn-primary' %>
  </div>
<% end %>
