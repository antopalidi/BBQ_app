<h1 class="my-5"><%= t('app.events') %></h1>

<div class="col-md-12 mb-5">
  <%= render 'partials/map' %>
</div>

<% if policy(Event).create? %>
  <%= link_to t('views.buttons.create_event'), new_event_path, class: 'btn btn-success' %>
<% end %>
<div id="events" class="my-4 row row-cols-1 row-cols-lg-3 row-cols-md-2">
  <% @events.each do |event| %>
    <%= render event %>
  <% end %>
</div>
