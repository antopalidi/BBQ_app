<div class="col col-sm-6 col-md-4 p-3">
  <div class="card thumbnail">

    <%= content_tag 'div', '', class: 'event-background',
                    style: "background-image: url(#{asset_path('event_thumb.jpg')})" %>

    <div class="thumbnail-inner event-info-inner">
      <div class="card-body">
        <div class="event-description">
          <div class="card-title">
            <h3 class="text-wrap"><%= link_to event.title, event_path(event) %></h3>
          </div>
          <div class="card-text">
            <h4><small><%= l event.datetime, format: :short %></small></h4>
            <div class="my-2"><%= link_to event.address,
                                          "https://yandex.ru/maps/?text=#{event.address}" %></div>
          </div>
        </div>
        <div>
          <% event.visitors.each do |user| %>
            <%= image_tag user_avatar_thumb(user), class: 'img-icon', title: user.name %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
