<h1><%= t('.title') %></h1>
<%= image_tag(@photo.photo.thumb.url) %>
<p><%= t('.author') %>: <strong><%= @photo.user.name %></strong></p>

<hr/>

<%= t('.event') %>
<h3><%= sanitize link_to(@event.title, event_url(locale, @event, only_path: false )),
                 tags: %w(a), attributes: %w(href)%>
</h3>
<%= t('.datetime') %>
<h4><%= l @event.datetime, format: :short %></h4>

<%= t('.owner') %>
<h4><%= @event.user.name %></h4>
