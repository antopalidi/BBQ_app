<%= form_with model: [@event, comment], data: { turbo: false }, class: 'mb-4' do |f| %>
  <%= render partial: 'partials/errors', locals: {model: comment} %>
  <div class="mb-2">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <% unless user_signed_in? %>
    <div class="mb-2">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Отправить', class: 'btn btn-outline-primary' %>
  </div>
<% end %>
