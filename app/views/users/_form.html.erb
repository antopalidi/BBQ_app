<%= form_with model: @user, data: { turbo: false }, html: {multipart: true} do |f| %>

  <div class="actions">
    <%= render 'partials/errors', object: @user %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
      или <%= link_to 'вернуться', :back %>
    </div>
  </div>
<% end %>
