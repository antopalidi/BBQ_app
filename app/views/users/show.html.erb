<div class="text-center mt-5">
  <h1><%= @user.name %></h1>


<%= image_tag user_avatar(@user), class: 'user-photo' %>

<% if @user == current_user %>
  <div class="d-flex flex-row justify-content-center align-items-center mt-5 mb-5">
    <%= link_to "Редактировать профиль", edit_user_path(@user), class: 'btn btn-outline-success me-3' %>
    <%= button_to 'Удалить профиль', event_path(@user), method: :delete,
                  form: { data: { turbo_confirm: 'Are you sure' } }, title: 'Delete profile',
                  class: 'btn btn-outline-danger' %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>События пользователя:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top">У этого пользователя еще нет событий</p>
      <% end %>
    </div>
  </div>
<% end %>
</div>
