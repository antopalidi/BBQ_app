<div class="text-center">
  <h1><%= @user.name %></h1>
</div>

<%= image_tag user_avatar(@user) %>

<% if @user == current_user %>
  <div class="d-flex flex-row justify-content-around align-items-center mt-5">
    <%= link_to "Edit profile", edit_user_path(@user), class: 'btn btn-outline-success' %>
    <%= button_to 'Delete profile', event_path(@user), method: :delete,
                  form: { data: { turbo_confirm: 'Are you sure' } }, title: 'Delete profile',
                  class: 'btn btn-outline-danger' %>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>User events:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top">The user has not yet organized any events</p>
      <% end %>
    </div>
  </div>
<% end %>
